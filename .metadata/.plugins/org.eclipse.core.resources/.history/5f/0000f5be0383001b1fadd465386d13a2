<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript" src="httpRequest.js"></script>
<script type="text/javascript">

	window.onload = function(){
		sendRequest("member_json.jsp", "", veiwInfo, "GET");
	}
	
	function veiwInfo(){
		if(httpRequest.readyState == 4){	// httpRequest.readyState = 1,2,3은 전송중
			if(httpRequest.status == 200){	// httpRequest.readyState = 4 전송완료
				var result = eval("(" + httpRequest.responseText + ")");
				if(result.code == "success"){
					var m = result.data.member;
					var html = "<span>이름:" + m.name + ", ID: " + m.id + "</span>";
					
					var list = document.getElementById("list");
					list.innerHTML = html;					
				}
			}
		}
	}
	
	
</script>
</head>
<body>
	<div id="list"></div>
</body>
</html>